{% props color = 'primary', size = 'regular', href = false %}

{% set style_badge = cva({
    base: 'font-medium',
    variants: {
        color: {
            primary: 'text-primary-50 bg-primary-700',
            gray: 'text-gray-900 bg-gray-100 dark:text-gray-50 dark:bg-gray-700',
        },
        size: {
            sm: 'px-1 py-0.5 rounded-md',
            regular: 'px-2 py-1 rounded-lg',
        },
    },
}) %}

<{{ href ? 'a' : 'span' }} class="{{ style_badge.apply({color, size, hoverable: not href}, attributes.render('class') ?? '') }}" {{ attributes.defaults({href}) }}>
    {{- block('content') -}}
</{{ href ? 'a' : 'span' }}>