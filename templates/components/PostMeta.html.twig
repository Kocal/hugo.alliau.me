<div{{ attributes }} class="flex flex-col gap-2">
    <div class="flex items-center gap-x-2">
        <twig:UX:Icon name="bi:clock" aria-label="Publication date" class="shrink-0"/>

        <time datetime="{{ post.publishedAt|date('c') }}">
            {{ post.publishedAt|format_datetime('long', 'none') }}
        </time>
    </div>

    {% if post.tags is not empty %}
        <ul class="flex flex-row flex-wrap gap-1">
            {% for tag in post.tags %}
                <li>
                    <twig:Badge>
                        <a href="{{ path(constant('App\\Domain\\Routing\\ValueObject\\RouteName::BLOG_TAG_VIEW'), { tag }) }}">
                            {{- tag -}}
                        </a>
                    </twig:Badge>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>