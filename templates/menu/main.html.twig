<nav role="navigation" aria-label="Main" class="flex-1">
    <ul class="flex gap-x-1 sm:gap-x-2">
        {% for child in item.children %}
            {% set is_current = matcher.isCurrent(child) or matcher.isAncestor(child) %}
            <li>
                <a
                    href="{{ child.uri }}"
                    class="block text-md sm:text-lg px-2 py-1 {{ is_current ? 'bg-primary-700 text-primary-50' : '' }} hover:bg-primary-700 hover:text-primary-50 transition-colors duration-200"
                    {% if is_current %}aria-current="page"{% endif %}
                >
                    {{ child.label ?? child.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>