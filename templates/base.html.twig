<!DOCTYPE html>
<html lang="{{ app.request.locale }}" dir="ltr">
    <head>
        <meta charset="UTF-8">
        <title>{{ block('title') }} </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}

            <script async src="{{ dns_prefetch('https://www.googletagmanager.com') }}/gtag/js?id=G-Z8KN175TJZ"></script>
            <script>window.dataLayer=window.dataLayer||[],window.gtag=function(){dataLayer.push(arguments)},gtag("js",new Date),gtag("config","G-Z8KN175TJZ");</script>
        {% endblock %}

        <link rel="icon" type="image/svg+xml" href="{{ asset('assets/images/icons/favicon.svg') }}">
        <link rel="icon" type="image/png" href="{{ asset('assets/images/icons/favicon-32x32.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/images/icons/apple-touch-icon.png') }}">
        <link rel="canonical" href="{{ app.request.uri }}">
        <meta name="msapplication-TileColor" content="#000000">
        <meta name="theme-color" content="#000000">

        {% block open_graph %}
        {% endblock %}
    </head>
    <body>
        {% block body %}

            {% block main %}{% endblock %}

        {% endblock %}
    </body>
</html>
