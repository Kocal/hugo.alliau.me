{% extends 'base.html.twig' %}

{% block title %}Blog &bullet; Hugo Alliaume{% endblock %}

{% block body %}
    <h1>Blog</h1>

    {% for post in posts %}
        <article>
            <header>
                <h2>
                    <a href="{{ path(constant('App\\Domain\\Routing\\ValueObject\\RouteName::BLOG_POST_VIEW'), {slug: post.slug}) }}">
                        {{ post.title }}
                    </a>
                </h2>
            </header>

            <p>{{ post.description }}</p>

            <footer>
                <div>
                    <p>
                        <time datetime="{{ post.publishedAt|date('c') }}">
                            {{ post.publishedAt|date('l, F j, Y') }}
                        </time>
                    </p>
                </div>
                {% if post.tags is not empty %}
                    <div>
                        {% for tag in post.tags %}
                            <a href="{{ path(constant('App\\Domain\\Routing\\ValueObject\\RouteName::BLOG_TAG_VIEW'), { tag }) }}">
                                {{- tag -}}
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </footer>
        </article>
    {% endfor %}

{% endblock %}
